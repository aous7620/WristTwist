<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:boxedEdges="all">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service status"
                    android:textColor="#888888"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_disabled"
                    android:textColor="#4CAF50"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gesture action"
                    android:textColor="#888888"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/current_action_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Play/Pause Media"
                    android:textColor="#2196F3"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/change_action_button"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/button_secondary"
                    android:text="Change"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <Button
                android:id="@+id/enable_gesture_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/button_success"
                android:text="Enable Gesture"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

            <Button
                android:id="@+id/toggle_service_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_danger"
                android:text="Pause Service"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />
        </LinearLayout>
    </ScrollView>
</androidx.wear.widget.BoxInsetLayout>
