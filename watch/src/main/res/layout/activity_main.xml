<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:boxedEdges="all">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/app_name"
                android:textColor="?attr/colorOnBackground"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_status_label"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_disabled"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/primary_gesture_action"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/current_action_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/default_watch_action"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/change_action_button"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/button_secondary"
                    android:text="@string/change_primary_action_watch"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/reverse_gesture_action"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/reverse_action_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/default_watch_action"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/change_reverse_action_button"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/button_secondary"
                    android:text="@string/change_reverse_action_watch"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="10sp" />
            </LinearLayout>

            <Button
                android:id="@+id/enable_gesture_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/button_success"
                android:text="@string/enable_gesture"
                android:textAllCaps="false"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="11sp" />

            <Button
                android:id="@+id/toggle_service_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_danger"
                android:text="@string/pause_service"
                android:textAllCaps="false"
                android:textColor="?attr/colorOnErrorContainer"
                android:textSize="11sp" />
        </LinearLayout>
    </ScrollView>
</androidx.wear.widget.BoxInsetLayout>
